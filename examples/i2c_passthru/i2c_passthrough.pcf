# ------------ LED ------------------------------------------------------
set_io ICE_LED 38
set_io RGB_R 39
set_io RGB_G 40
set_io RGB_B 41

# ------------ BTN ------------------------------------------------------
set_io PI_ICE_BTN 6

# ------------ RP2040 I2C1
set_io rp2040_sda 36
set_io rp2040_scl 34

# ------------ PERIPH I2C1
# use SDA=11, SCL=10 for cryptomem, SDA=4, SCL=3 for IMU/EEPROM
set_io periph_sda 4
set_io periph_scl 3

# -------------------------- SYSTEM CLOCK ------------------------------------
set_io ICE_CLK 37
set_frequency ICE_CLK 37

